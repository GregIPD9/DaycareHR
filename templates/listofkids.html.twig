{% extends "master.html.twig" %}

{% block title %}Kids list{% endblock %}

{% block content %}
    <div>
        <h2>
            <strong>Kids List</strong>
             <div>
                <button type="submit" class="btn btn--right"><a href="/addchild" class='btn--no--underline'>Add Child</a></button>
            </div> 
        </h2>
            <table border="1">
                <th>Name</th>
                <th>Age</th>
                <th>Photo</th>
                <th>Allergies</th>
                <th>Group</th>
                <th>Mother</th>
                <th>Phone</th>
                <th>Address</th>
                <th>Map</th>
                <th>Notes</th>
                <th>Edit</th>
                <th>Delete</th>
                    {% for k in kids %}
                    <tr>
                        <td>{{ k.kidName }}</td>
                        <td>{{ k.age }}</td>
                        <td><img src="/viewphotokids/{{k.id}}"></td>
                        <td>{{ k.allergies }}</td>
                        <td>{{ k.groupName }}</td>
                        <td>{{ k.motherName }}</td>
                        <td>{{ k.motherPhone }}</td>
                        <td class="center"><a href="https://maps.google.com/?q={{ k.address }}" target="_blank">{{ k.address }}</a></td>
                        <td>
                            <iframe width="340" height="200" frameborder="0" scrolling="no" marginheight="0" 
                                    marginwidth="0" src="https://maps.google.ca/maps?q={{ k.address }}
                                    &output=embed"></iframe></td>
                        <td>{{ k.notes }}</td>
                        <td><a href="/editchild/edit/{{k.id}}">edit</a></td>
                        <td><a href="/deletechild/delete/{{k.id}}">delete</a></td>
                    </tr>
                {% endfor %}
            </table>
             
    </div>
          
{% endblock %}

