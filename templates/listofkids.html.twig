{% extends "master.html.twig" %}

{% block title %}List of Children{% endblock %}

{% block content %}
    <div class="wrap2" >
        <h2>
            <strong>List of Children</strong>
             <div >
                 <a style="display: inline-block" href="/addchild" class="button">Add new Child</a>
                 <a style="display: inline-block" href="/main" class="button">Return to Main</a>
            </div> 
        </h2>
            <table border="1">
                <th>Name</th>
                <th>Age</th>
                <th>Photo</th>
                <th>Educator</th>
                <th>Allergies</th>
                <th>Group</th>
                <th>Address</th>
                <th>Edit</th>
                <th>Delete</th>
                    {% for k in kids %}
                  
                    <tr>
                        <td><a href="/childinfo/{{ k.id }}" target="_blank">{{ k.kidName }}</td>
                        <td>{{ k.age }}</td>
                        <td><img src="/viewphotokids/{{k.id}}" width="100" height="100"></td>
                        <td>{{ k.name }}</td>
                        <td>{{ k.allergies }}</td>
                        <td>{{ k.groupName }}</td>
                        <td class="center"><a href="https://maps.google.com/?q={{ k.address }}" target="_blank">{{ k.address }}</a></td>
                        <td><a href="/editchild/edit/{{k.id}}">edit</a></td>
                        <td><a href="/deletechild/delete/{{k.id}}">delete</a></td>
                    </tr>
                {% endfor %}
               

            </table>
             
    </div>
          
{% endblock %}

