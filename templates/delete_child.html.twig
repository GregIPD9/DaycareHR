{% extends "master.html.twig" %}

{% block title %}Delete a Child{% endblock %}

{% block content %}
    
<h3> Are you sure you want to delete this Child?</h3>
    

<form method="post" enctype="multipart/form-data">     
<p>Name: {{v.kidName}}</p>
<p>Group: {{v.groupName}}</p>
<p>Age: {{v.age}}</p>
<p>Photo: <img src="/viewphotokids/{{v.id}}"></p>
</form><br>
<form style="display: inline-block" action="/listofkids">
        <input type="submit" value="Cancel">
        <input type="hidden" name="delete" value="confirmed">
        <input type="submit" value="Yes, delete">
</form>
{% endblock content %}
