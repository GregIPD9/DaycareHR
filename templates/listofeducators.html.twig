{% extends "master.html.twig" %}

{% block title %}Educators list{% endblock %}

{% block content %}
    <div class="wrap2" >
        <h2>
            <strong>Educators List</strong>
        </h2>
        <div>
            <a style="display: inline-block" href="/addeducator" class="button">Add new Educator</a>
            <a style="display: inline-block" href="/main" class="button">Return to Main</a>
            </div>
            <table border="1">
                <th>Name</th>
                <th>Phone</th>
                <th>Photo</th>
                <th>Email</th>
                <th>Group</th>
                <th>Hire date</th>
                <th>Salary</th>
                <th>Previous Vacation</th>
                <th>Next Vacation</th>
                <th>Edit</th>
                <th>Delete</th>
                    {% for e in educators %}
                    <tr>
                        <td>{{ e.name }}</td>
                        <td>{{ e.phone }}</td>
                        <td><img src="/viewphotoeducators/{{e.id}}"</td>
                        <td>{{ e.email }}</td>
                        <td>{{ e.groupName }}</td>
                        <td>{{ e.startDate }}</td>
                        <td>{{ e.yearlySalary }}</td>
                        <td>{{ e.previousVacation }}</td>
                        <td>{{ e.nextVacation }}</td>
                        <td><a href="/editeducator/edit/{{e.id}}">edit</a></td>
                        <td><a href="/deleteeducator/delete/{{e.id}}">delete</a></td>
                    </tr>
                {% endfor %}
            </table>
            

    </div>
    </div>
{% endblock %}
