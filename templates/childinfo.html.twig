{% extends "master.html.twig" %}

{% block title %}Child{% endblock %}

{% block content %}
    <div class="wrap2" >
        {% for c in childinfo %}   
             <div >
                 <a href="/main" class="button">Return to Main</a>
            </div> 
            <table border="1">
                <th>Name</th>
                <th>Age</th>
                <th>Photo</th>
                <th>Allergies</th>
                <th>Group</th>
                <th>Mother</th>
                <th>Phone</th>
                <th>Modify</th>
                    <tr>
                        <td>{{ c.kidName }}</td>
                        <td>{{ c.age }}</td>
                        <td><img src="/viewphotokids/{{c.id}}"></td>
                        <td>{{ c.allergies }}</td>
                        <td>{{ c.groupName }}</td>
                        <td>{{ c.motherName }}</td>
                        <td>{{ c.motherPhone }}</td>
                        <td><a href="/editchild/edit/{{c.id}}">edit</a>
                        <a href="/deletechild/delete/{{c.id}}">delete</a></td>
                    </tr>
                
            </table><br>
            <h2>Special Notes about this child:</h2>
            <h3>
                {{ c.notes }}
            </h3>
    
                <div>
                   <iframe width="600" height="400" frameborder="0" scrolling="no" marginheight="0" 
                                    marginwidth="0" src="https://maps.google.ca/maps?q={{ c.address }}
                                    &output=embed"></iframe>
                </div></div>{% endfor %}
{% endblock %}

